{
  "name": "egress-filter",
  "version": "0.1.0",
  "description": "Transparent proxy with eBPF-based PID tracking",
  "private": true,
  "scripts": {
    "build": "npm run build:pre && npm run build:main && npm run build:post",
    "build:pre": "ncc build src/action/pre.js -o dist/pre",
    "build:main": "ncc build src/action/main.js -o dist/main",
    "build:post": "ncc build src/action/post.js -o dist/post"
  },
  "dependencies": {
    "@actions/cache": "^5.0.3",
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/glob": "^0.5.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.3"
  }
}
